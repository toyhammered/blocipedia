<% if controller_name != 'sessions' %>
<div class="panel-footer col-sm-12">
  <div class="row text-center">
    <h4 class="text-center">Already have an account?</h4>
    <%= link_to "Sign In", new_session_path(resource_name), class: "btn btn-primary" %>
  </div>
</div>
<% end %>

<% if devise_mapping.registerable? && controller_name != 'registrations' %>
<div class="panel-footer col-sm-12">
  <div class="row text-center">
    <h4 class="text-center">Don't have an account yet?</h4>
    <%= link_to "Sign Up", new_registration_path(resource_name), class: "btn btn-primary" %>
  </div>
</div>
<% end %>

<% if devise_mapping.recoverable? && controller_name != 'passwords' %>
<div class="panel-footer col-sm-12">
  <div class="row text-center">
    <h4 class="text-center">Forgot your password?</h4>
    <%= link_to "New Password", new_password_path(resource_name), class: "btn btn-primary" %>
  </div>
</div>
<% end %>

<% if devise_mapping.confirmable? && controller_name != 'confirmations' %>
<div class="panel-footer col-sm-12">
  <div class="row text-center">
    <h4 class="text-center">Didn't receive confirmation email?</h4>
    <%= link_to "Resend Email", new_confirmation_path(resource_name), class: "btn btn-primary" %>
  </div>
</div>
<% end %>
