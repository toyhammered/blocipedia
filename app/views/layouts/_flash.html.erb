<div class="flash">
  <% if flash[:notice] %>
  <div class="alert alert-success">
    <button class="close" data-dismiss="alert" type="button">&times;</button>
    <%= flash[:notice] %>
  </div>
  <% elsif flash[:error] %>
  <div class="alert alert-danger">
    <button class="close" data-dismiss="alert" type="button">&times;</button>
    <%= flash[:error] %>
  </div>
  <% elsif flash[:alert] %>
  <div class="alert alert-warning">
    <button class="close" data-dismiss="alert" type="button">&times;</button>
    <%= flash[:alert] %>
  </div>
  <% end %>
</div>
